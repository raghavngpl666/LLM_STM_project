<workflow id="SimpleCustomerSupport">
    <state id="New">
        <transition event="issue_classified" target="Triage"/>
    </state>
    <state id="Triage">
        <transition event="simple_resolved" target="Closed_Resolved"/>
        <transition event="complex_escalated" target="Tier2_Support"/>
    </state>
    <state id="Tier2_Support">
        <transition event="solution_found" target="Closed_Resolved"/>
        <transition event="unresolvable" target="Closed_Unresolved"/>
    </state>
    <state id="Closed_Resolved"/>
    <state id="Closed_Unresolved"/>
</workflow>